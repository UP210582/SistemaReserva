# frontend/Dockerfile
FROM node:20.5.0-alpine3.18
RUN addgroup -S reservasfront && adduser -S -G reservasfront reservasfront
WORKDIR /app/
COPY package*.json ./
RUN npm install --legacy-peer-deps
COPY . .
RUN chown -R reservasfront:reservasfront .
USER reservasfront
EXPOSE 3000
CMD ["npm","run", "dev"]
